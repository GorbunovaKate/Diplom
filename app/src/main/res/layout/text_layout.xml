<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ru.noties.jlatexmath.JLatexMathView
        android:id="@+id/math_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:jlmv_background="@color/light_background"
        app:jlmv_textColor="@color/light_onBackground"
        app:jlmv_textSize="14sp" />

    <ru.noties.jlatexmath.JLatexMathView
        android:id="@+id/dark_math_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:jlmv_background="@color/dark_background"
        app:jlmv_textColor="@color/dark_onBackground"
        app:jlmv_textSize="14sp" />

</LinearLayout>